<div
  data-controller="screenshot"
  class="flex flex-col gap-4 max-w-lg mx-auto mt-32 w-full text-center p-12"
>
  <p class="text-gray-400 text-sm">Completely anonymous question form. Answer will be posted on my X account,
    <a href="https://x.com/MohdZafranudin" class="text-blue-400" target="_blank">@MohdZafranudin</a></p>

  <div class="border border-gray-100 rounded-3xl">
    <div
      class="
        overflow-hidden w-full bg-white border-4 border-gray-50 rounded-3xl text-center
        flex flex-col
      "
    >
      <div class="w-full py-6 px-8 bg-rose-400">
        <h1 class="text-lg text-white text-center">Ask me anything</h1>
      </div>

      <div class="flex flex-col">
        <div class="flex flex-col gap-4 text-center select-none">

          <div
            class="
              border-none select-none text-center text-xl w-full p-6 border border-gray-300
              font-bold
            "
          >
            <%= @question.content %>
          </div>

        </div>
      </div>
    </div>
  </div>

  <p class="text-gray-300">ask.zafranudin.dev</p>
  <!-- Button to trigger screenshot -->
  <button
    data-screenshot-target="button"
    data-action="click->screenshot#takeScreenshot"
    class="mt-4 bg-blue-500 text-white p-2 rounded"
  >
    Take Screenshot
  </button>

  <div data-screenshot-target="result" class="mt-4 hidden"></div>
</div>
